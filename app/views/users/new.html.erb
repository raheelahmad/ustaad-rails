<h1>Sign up</h1>

<%= form_for @user do |f| %>
  <table cellspacing="0">
    <tr>
      <td><%= f.label :email %></td>
      <td><%= f.text_field :email %></td>
    </tr>
    <tr>
      <td><%= f.label :password %></td>
      <td><%= f.text_field :password %></td>
    </tr>
    <tr>
      <td><%= f.label :password_confirmation %></td>
      <td><%= f.text_field :password_confirmation %></td>
    </tr>
  </table>
  <%= f.submit 'Sign up' %>
<% end %>
